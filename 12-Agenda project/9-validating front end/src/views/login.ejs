<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container"></div>
        <div class="row">
            <div class="col-lg-2"></div>
            <!-- all this classs is in boodstrap -->
            <div class="col-lg-8 my-3">
                <h1 class=" text-center">Login</h1>
                <p class="text-center lead">login or create your account</p>

                <%- include('includes/messages')  %>

                <div class="row">
                    <div class="col-lg my-5">
                        <h4>Make your registration</h4>
                        <p>If you do not have an account, fill out the form below:</p>

                        <form class="form-register" action="/login/register" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                            <div class="form-group">
                                <label>Your e-mail</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Your password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Create account</button>
                        </form>
                    </div>

                    <div class="col-lg my-5">
                        <h4>Make login</h4>
                        <p>If you have an account, make login below:</p>
                        <form class="form-login" action="/login/login" method="POST">
                            <input type="hidden" name="_csrf" value=<%= csrfToken %>>

                            <div class="form-group">
                                <label>Your e-mail</label>
                                <input type="email" class="form-control" name="email">
                            </div>
                            <div class="form-group">
                                <label>Your password</label>
                                <input type="password" class="form-control" name="password">
                            </div>
                            <button type="submit" class="btn btn-primary">Enter</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg"></div>
        </div>

        <%- include('includes/footer') %>